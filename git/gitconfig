[user]
	name = Rob Nagle
	email = rjn945@gmail.com

[color]
  diff = auto
  interactive = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan


[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  who = shortlog
  who-count = shortlog -s --
  last = diff HEAD~1..HEAD
  discard = checkout --
  unstage = reset HEAD
  uncommit = reset --mixed HEAD~1
  anticommit = revert
