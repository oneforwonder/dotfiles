[user]
  name = Rob Nagle
  email = rob@bitmatica.com

[core]
  autocrlf = false
  excludesFile = ~/.gitignore_global

[push]
  default = simple

[color]
  diff = auto
  interactive = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = white bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = magenta bold
  untracked = cyan

[alias]
  # Shorthand for common commands
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached

  # More memorable names for these slightly complicated commands
  discard = checkout --
  unstage = reset HEAD
  uncommit = reset --mixed HEAD~1
  anticommit = revert
  last = diff HEAD~1..HEAD

  # See who has done what
  who = shortlog
  who-count = shortlog -s --

  # Various log outputs
  # Log graph
  lg = log --graph --pretty=format:'%C(yellow bold)%h%Creset -%C(red)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit --date=relative

  # Log pretty one line format
  sl = log --pretty=format:'%C(yellow bold)%h%Creset %Cgreen(%cr)%Creset %s %C(blue bold)[%an]%Creset' --no-merges

  # Log recent commits (last 30) in pretty one line format
  slr = log --pretty=format:'%C(yellow bold)%h%Creset %Cgreen(%cr)%Creset %s %C(blue bold)[%an]%Creset' --no-merges -n 30
